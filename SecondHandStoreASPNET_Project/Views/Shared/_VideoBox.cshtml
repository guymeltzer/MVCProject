@model Models.Models.Video
@using SecondHandStoreASPNET_Project.Helpers

<div>
    <div class="TitleContainer">
        <h3 class="VideoBoxTitle">@Model.Title</h3>
    </div>


    <div class="ImageContainer">
        <a href="/video/details/@Model.VideoID">@Html.ImageConvertHelper(Model.Image1, "auto", "100%")</a>
    </div>

    <div class="DescriptionContainer">
        <p>@Model.ShortDescription</p>
    </div>

    <div class="PriceContainer">
        <p>@Model.Price ₪</p>
    </div>
</div>



